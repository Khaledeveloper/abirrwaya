<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:elevation="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/lightpink"

        android:layout_margin="10dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:gravity="right"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:id="@+id/TextViewTitleID"
                android:text="Title"
                android:textColor="@color/black"
                android:gravity="center"
                android:textStyle="bold"
               android:layout_margin="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Content"
                android:textColor="@color/black"
                android:id="@+id/TextViewContentID"
                android:gravity="right"
               android:layout_margin="10dp"


                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/white"




                >

                <Button
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/sharepink24"
                    android:layout_margin="20dp"
                    android:id="@+id/shareCardID"/>
                <ToggleButton

                    android:gravity="start"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/check"
                    android:textOn=""
                    android:textOff=""
                    android:id="@+id/ToggleHeartID"
                    android:paddingLeft="20dp"
                    android:onClick="Toggle"
                    android:layout_margin="20dp"
                    android:foreground="?android:attr/selectableItemBackground"

                    />



          <!--      <ToggleButton
                    android:gravity="right"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/checkfav"
                    android:textOn=""
                    android:textOff=""
                    android:foreground="?android:attr/selectableItemBackground"

                    />-->

            </LinearLayout>





        </LinearLayout>






    </android.support.v7.widget.CardView>

</LinearLayout>